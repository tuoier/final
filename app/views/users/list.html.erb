<h1>User list (only for debug)</h1>

<% all_users = User.read %>

<table border="1" >
  <thead>
    <tr>
      <th>ID(debug use only)</th>
      <th>Username</th>
      <th>Password</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% all_users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.username %></td>
      <td><%= user.password %></td>
      <td><%= user.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>